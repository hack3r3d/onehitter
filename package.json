{
  "name": "onehitter",
  "version": "2.0.1",
  "description": "One-time password user validation package.",
  "main": "dist/cjs/onehitter.js",
  "module": "dist/esm/onehitter.js",
  "funding": "https://venmo.com/unifly",
  "types": "dist/types/onehitter.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/onehitter.js",
      "require": "./dist/cjs/onehitter.js",
      "types": "./dist/types/onehitter.d.ts",
      "default": "./dist/cjs/onehitter.js"
    },
    "./rate-limiter": {
      "import": "./dist/esm/rate-limiter.js",
      "require": "./dist/cjs/rate-limiter.js",
      "types": "./dist/types/rate-limiter.d.ts",
      "default": "./dist/cjs/rate-limiter.js"
    },
    "./sender": {
      "import": "./dist/esm/sender.js",
      "require": "./dist/cjs/sender.js",
      "types": "./dist/types/sender.d.ts",
      "default": "./dist/cjs/sender.js"
    },
    "./db/ensure-ttl": {
      "import": "./dist/esm/db/ensure-ttl.js",
      "require": "./dist/cjs/db/ensure-ttl.js",
      "types": "./dist/types/db/ensure-ttl.d.ts",
      "default": "./dist/cjs/db/ensure-ttl.js"
    }
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "pretest": "npm run build",
    "test": "mocha tests --grep \"#send\" --invert",
    "test:unit": "mocha --timeout 10000 --file tests/helpers/unit-bootstrap.js tests/rate-limiter-defaults.js tests/make.js tests/sender.js tests/sqlite-functions.js tests/sqlite-adapter.js tests/ensure-ttl.js",
    "test:integration": "mocha --timeout 20000 tests/onehitter.js tests/concurrency.js tests/hash.js tests/inmem-limiter.js tests/rate-limiter.js tests/validate-status.js",
    "test:integration:tc": "npm run build && mocha --file tests/helpers/testcontainers-mongo.js tests/onehitter.js tests/concurrency.js tests/hash.js tests/inmem-limiter.js tests/rate-limiter.js tests/validate-status.js",
    "test:all": "npm run build && mocha tests",
    "test:file": "npm run build && mocha tests/onehitter.js",
    "test:send": "npm run build && mocha tests/onehitter.js -g \"#send\"",
    "test:concurrency": "npm run build && mocha tests/concurrency.js",
    "test:coverage": "npm run build && nyc --reporter=lcov --reporter=text --check-coverage mocha tests",
    "test:ci": "npm run build && mocha tests/sender.js tests/rate-limiter-defaults.js tests/make.js tests/sqlite.js",
    "db:ensure-ttl": "npm run build && node dist/cjs/db/ensure-ttl.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hack3r3d/onehitter.git"
  },
  "homepage": "https://github.com/hack3rd/onehitter#readme",
  "bugs": {
    "url": "https://github.com/hack3r3d/onehitter/issues"
  },
  "keywords": [
    "otp",
    "one-time-password",
    "mongodb",
    "ses",
    "nodemailer",
    "verification",
    "auth",
    "node"
  ],
  "author": "Keith Vance <discgolfer@uniflydiscs.com>",
  "license": "MIT",
  "engines": {
    "node": "^18 || ^20"
  },
  "files": [
    "dist/esm",
    "dist/cjs",
    "dist/types",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@aws-sdk/client-ses": "^3.716.0",
    "dotenv-safe": "^9.1.0",
    "mongodb": "^6.12.0",
    "nodemailer": "^7.0.10",
    "otp-generator": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.12.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "proxyquire": "^2.1.3",
    "testcontainers": "^10.10.4",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "sqlite3": "^5.1.7"
  },
  "peerDependenciesMeta": {
    "sqlite3": {
      "optional": true
    }
  }
}
